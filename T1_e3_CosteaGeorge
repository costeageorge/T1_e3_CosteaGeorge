%a)
t=0:0.002:10;

niv1 = [ -1,1 ];


hold on

figure(1)
for n=0:0.25:10
y = datasample(niv1, 1);
plot(t, y*rectpuls(t-n, 0.25))
end

title('Semnal Dreptunghiular multinivel aleator')
xlabel('Timp [s]')
ylabel('A [V]')

hold off

 

niv2 = [ -3,-1,1,3 ];
hold on
figure(2)
for n=0:0.25:10
y = datasample(niv2, 1);
plot(t, y*rectpuls(t-n, 0.25))
end

title('Semnal Dreptunghiular multinivel aleator')
xlabel('Timp [s]')
ylabel('A [V]')

hold off


niv3 = [ -5,-3,-1,1,3,5];

hold on
figure(3)
for n=0:0.25:10
y = datasample(niv3, 1);
plot(t, y*rectpuls(t-n, 0.25))
end

title('Semnal Dreptunghiular multinivel aleator')
xlabel('Timp [s]')
ylabel('A [V]')

hold off


niv4 = [ -7,-5,-3,-1,1,3,5,7];
hold on
figure(4)
for n=0:0.25:10
y = datasample(niv4, 1);
plot(t, y*rectpuls(t-n, 0.25))
end


title('Semnal Dreptunghiular')
xlabel('Timp [s]')
ylabel('A [V]')

hold off


